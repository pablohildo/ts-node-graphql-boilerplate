{
    "compilerOptions": {
      "lib": ["es2019"],
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "composite": true,
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "strict": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["./src/", ".eslintrc.js"]
  }
  